                {"Q6: ansA", "ansB", "ansC"},
                {"Q7: ansA", "ansB", "ansC"}, 
                {"Q8: ansA", "ansB", "ansC"}, 
                {"Q9: ansA", "ansB", "ansC"},
                {"Q10: ansA", "ansB", "ansC"}};

            char correctans[numques] = 
                {'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A'};

            int scores[3] = {0}; 

            for (int i = 0; i < numques; ++i) {
                char result = quesans(questions[i], choices[i], correctans[i]);

                if (result == '1') {
                    scores[0]++;
                } else if (result == '2') {
                    scores[1]++;
                } 
                cout << endl;
            }

            cout << "Quiz completed! Results:" << endl;
            cout << "Player 1's score: " << scores[0] << "/" << numques << endl;
            cout << "Player 2's score: " << scores[1] << "/" << numques << endl;

            float percentagePlayer1 = ((float)scores[0]) / numques * 100;
            float percentagePlayer2 = ((float)scores[1]) / numques * 100;

            cout << "Percentage for Player 1: " << percentagePlayer1 << "%" << endl;
            cout << "Percentage for Player 2: " << percentagePlayer2 << "%" << endl;
            break;
        }

        case 'C': {
            const int numques = 10;

            string questions[numques] = 
                {"Q1:", 
                "Q2:", 
                "Q3:", 
                "Q4:", 
                "Q5:", 
                "Q6:", 
                "Q7:", 
                "Q8:", 
                "Q9:", 
                "Q10"};

            string choices[numques][3] = {
                {"Q1: ansA", "ansB", "ansC"}, 
                {"Q2: ansA", "ansB", "ansC"}, 
                {"Q3: ansA", "ansB", "ansC"},
                {"Q4: ansA", "ansB", "ansC"}, 
                {"Q5: ansA", "ansB", "ansC"}, 
                {"Q6: ansA", "ansB", "ansC"},
                {"Q7: ansA", "ansB", "ansC"}, 
                {"Q8: ansA", "ansB", "ansC"}, 
                {"Q9: ansA", "ansB", "ansC"},
                {"Q10: ansA", "ansB", "ansC"}};

            char correctans[numques] = 
                {'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A'};

            int scores[3] = {0}; 

            for (int i = 0; i < numques; ++i) {
                char result = quesans(questions[i], choices[i], correctans[i]);

                if (result == '1') {
                    scores[0]++;
                } else if (result == '2') {
                    scores[1]++;
                } 
                cout << endl;
            }

            cout << "Quiz completed! Results:" << endl;
            cout << "Player 1's score: " << scores[0] << "/" << numques << endl;
            cout << "Player 2's score: " << scores[1] << "/" << numques << endl;

            float percentagePlayer1 = ((float)scores[0]) / numques * 100;
            float percentagePlayer2 = ((float)scores[1]) / numques * 100;

            cout << "Percentage for Player 1: " << percentagePlayer1 << "%" << endl;
            cout << "Percentage for Player 2: " << percentagePlayer2 << "%" << endl;
            break;
        }

        default:
            cout << "Invalid difficulty level" << endl;
            break;
    }
}

int main() {
    Quiz();
    return 0;
}
