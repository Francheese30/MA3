#include <iostream>
using namespace std;

char quesans(string question, string choices[], char correctanswer) {
    cout << question << endl;
    for (int i = 0; i < 3; ++i) {
        cout << static_cast<char>('A' + i) << ". " << choices[i] << endl;
    }

    cout << "Enter Player 1's answer: ";
    char answer1;
    cin >> answer1;
    answer1 = toupper(answer1);

    cout << "Enter Player 2's answer: ";
    char answer2;
    cin >> answer2;
    answer2 = toupper(answer2);

    if (answer1 == correctanswer && answer2 == correctanswer) {
        cout << "Both players are correct!" << endl;
        return 'B'; 
    } else if (answer1 == correctanswer) {
        cout << "Player 1 is correct!" << endl;
        return '1'; 
    } else if (answer2 == correctanswer) {
        cout << "Player 2 is correct!" << endl;
        return '2'; 
    } else {
        cout << "Both players are incorrect." << endl;
        return 'N'; 
    }
}

void Quiz() {
    char difficulty;
    cout << "A.Easy, B.Medium, C.Hard\n";
    cout << "Choose a difficulty: ";
    cin >> difficulty;

    switch (difficulty) {
        case 'A': {
            const int numques = 10;

            string questions[numques] = 
                {"Q1:", 
                "Q2:", 
                "Q3:", 
                "Q4:", 
                "Q5:", 
                "Q6:", 
                "Q7:", 
                "Q8:", 
                "Q9:", 
                "Q10"};

            string choices[numques][3] = {
                {"Q1: ansA", "ansB", "ansC"}, 
                {"Q2: ansA", "ansB", "ansC"}, 
                {"Q3: ansA", "ansB", "ansC"},
                {"Q4: ansA", "ansB", "ansC"}, 
                {"Q5: ansA", "ansB", "ansC"}, 
                {"Q6: ansA", "ansB", "ansC"},
                {"Q7: ansA", "ansB", "ansC"}, 
                {"Q8: ansA", "ansB", "ansC"}, 
                {"Q9: ansA", "ansB", "ansC"},
                {"Q10: ansA", "ansB", "ansC"}};

            char correctans[numques] = 
                {'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A', 
                'A'};

            int scores[3] = {0}; 

            for (int i = 0; i < numques; ++i) {
                char result = quesans(questions[i], choices[i], correctans[i]);

                if (result == '1') {
                    scores[0]++;
                } else if (result == '2') {
                    scores[1]++;
                } 
                cout << endl;
            }

            cout << "Quiz completed! Results:" << endl;
            cout << "Player 1's score: " << scores[0] << "/" << numques << endl;
            cout << "Player 2's score: " << scores[1] << "/" << numques << endl;

            float percentagePlayer1 = ((float)scores[0]) / numques * 100;
            float percentagePlayer2 = ((float)scores[1]) / numques * 100;

            cout << "Percentage for Player 1: " << percentagePlayer1 << "%" << endl;
            cout << "Percentage for Player 2: " << percentagePlayer2 << "%" << endl;
            
            break;
        }

        case 'B': {
            const int numques = 10;

            string questions[numques] = 
                {"Q1:", 
                "Q2:", 
                "Q3:", 
                "Q4:", 
                "Q5:", 
                "Q6:", 
                "Q7:", 
                "Q8:", 
                "Q9:", 
                "Q10"};

