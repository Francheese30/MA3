#include <iostream>
#include <cctype>
using namespace std;

int quesans(string question, string choices[], char correctanswer) {
    cout << question << endl;
    for (int i = 0; i < 4; ++i) {
        cout << static_cast<char>('A' + i) << ". " << choices[i] << endl;
    }

    char playerAnswer;
    cout << "Enter Player's answer: ";
    cin >> playerAnswer;
    playerAnswer = toupper(playerAnswer);

    if (playerAnswer == correctanswer) {
        cout << "Player is correct!" << endl;
        return 1;
    } else {
        cout << "Player is incorrect." << endl;
        return 0;
    }
}

void hardQuiz() {
    cout << "Welcome to Quizbee\n";
    int start;
    cout << "Hard Difficulty" << endl;
    cout << "Enter '1' to Start: ";
    cin >> start;

    if (start == 1) {
        const int numques = 10;
        float passed = numques * 0.8;
        struct Question {
            string question;
            string choices[4];
            char correctAnswer;
        };

        Question questions[numques] = {
            {"What symbol is used to symbolize percentage?", {"+", "-", "%", "/"}, 'C'},
            {"What is the half of one written as a fraction?", {"1/4", "1/2", "1/6", "1/8"}, 'B'},
            {"If the time is 12 pm, how many hours until 6 am?", {"6 hours", "8 hours", "10 hours", "12 hours"}, 'D'},
            {"How many hours are there in a week?", {"100 hrs", "250 hrs", "168 hrs", "69 hours"}, 'C'},
            {"15 > 14.9, is it true?", {"False", "True", "No Answer", "Neither"}, 'B'},
            {"What is half of one half?", {"1/6", "1/4", "1/3", "1/2"}, 'D'},
            {"What is the sum of 19-21?", {"-3", "3", "-4", "4"}, 'A'},
            {"What is the equivalent of 75 percent in fraction?", {"3/8", "3/4", "5/6", "1/2"}, 'B'},
            {"What number is considered as a special number?", {"1", "8", "7", "2"}, 'A'},
            {"Is 31 a prime number?", {"No", "Maybe", "Yes", "None of the above"}, 'C'},
            };

        int scores[2] = {0};

        for (int player = 1; player <= 2; ++player) {
            cout << "\nPlayer " << player << "'s turn:" << endl;
            for (int i = 0; i < numques; ++i) {
                int result = quesans(questions[i].question, questions[i].choices, questions[i].correctAnswer);

                if (result == 1) {
                    scores[player - 1]++;
                }
                cout << endl;
            }
        }

        cout << "Easy Quiz completed! Results:" << endl;
        cout << "Player 1's score: " << scores[0] << "/" << numques << endl;
        cout << "Player 2's score: " << scores[1] << "/" << numques << endl;

        if(scores[0] > scores [1]){
            cout<<"Player 1 Wins";
        }

        else if(scores[0] < scores [1]){
            cout<<"Player 2 Wins";
        }

        else if(scores[0] == scores[1] && scores[0] <= passed && scores[1] <= passed){
            cout<<"Its a tie\n";
            cout<<"both players didn't meet the required score to proceed to next level";
        }

        else if(scores[0] >= passed && scores[1] >= passed){
            char midiumLevel;
            cout<<"It's a tie";
            cout<<"Do you want to proceed to next level? [Y/N]: ";
            cin>>midiumLevel;
            if(midiumLevel == 'Y'){
            cout<<"Congratulations you have reach Clitcher";

            }
        }
    }
}

void midiumQuiz() {
    cout << "Welcome to Quizbee\n";
    int start;
    cout << "Midium Difficulty" << endl;
    cout << "Enter '1' to Start: ";
    cin >> start;

    if (start == 1) {
        const int numques = 10;
        float passed = numques * 0.8;
